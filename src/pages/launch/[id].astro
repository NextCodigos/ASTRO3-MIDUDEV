---
import { getLaunchBy } from "../../services/spacesx";
import Layout from "../../layouts/Layout.astro";
import { getLatestLaunches } from "../../services/spacesx";

const { id } = Astro.params;

console.log({ id });

let launch;
if (id) {
    launch = await getLaunchBy({ id });
}

